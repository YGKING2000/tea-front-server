<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.tea.front.server.content.dao.persist.mapper.CategoryMapper">
    <select id="getFirstCategoryList" resultMap="FirstListResultMap">
        SELECT id, name
        FROM content_category
        WHERE parent_id = 0
          AND enable = 1
          AND is_display = 1
        ORDER BY sort DESC, id DESC
    </select>

    <resultMap id="FirstListResultMap" type="com.example.tea.front.server.content.pojo.vo.FirstCategoryListItemVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <!--<sql id="FirstListQueryFields">
        <if test="true">

        </if>
    </sql>-->
</mapper>
